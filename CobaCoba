    <h1>Kamu mau gk jadi pacarku?</h1>
    <button onclick="terima()">Mau</button>
    <button onclick="tolak(this)">Ngga</button>

    <script>
        function terima() {
            alert("Terimakasih sudah terima aku jadi pacarmu:)");
        }

        function tolak(btn){
            btn.style.position = "absolute";
            btn.style.left = `${Math.random() * 300}px`;
            btn.style.left = `${Math.random() * 300}px`;

        }
    </script>
